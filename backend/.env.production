# Production Environment Configuration for SmartResume AI Resume Analyzer
# Copy this file to .env and update with your production values

# Application Configuration
DEBUG=false
SECRET_KEY=your-super-secure-secret-key-here-change-this
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# External API Keys
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["application/pdf","application/vnd.openxmlformats-officedocument.wordprocessingml.document","text/plain"]

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=3600

# ML Model Settings
NER_MODEL_NAME=yashpwr/resume-ner-bert-v2
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
NER_CONFIDENCE_THRESHOLD=0.80

# Performance Settings
MAX_CONCURRENT_USERS=50
REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://redis:6379/0

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8001

# Security Settings
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# SSL/TLS Settings (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem